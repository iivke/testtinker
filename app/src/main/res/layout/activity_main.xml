<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_imageview"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_loadpatch"
            android:layout_width="122dp"
            android:layout_height="53dp"
            android:text="load patch" />

        <Button
            android:id="@+id/btn_clearpatch"
            android:layout_width="122dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:text="clear patch" />

        <Button
            android:id="@+id/btn_killprocess"
            android:layout_width="124dp"
            android:layout_height="49dp"
            android:layout_marginTop="10dp"
            android:text="kill process" />

        <Button
            android:id="@+id/btn_showinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="show info" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_imageview"
            android:layout_width="230dp"
            android:layout_height="155dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/image_test2" />
    </RelativeLayout>

</RelativeLayout>